{
  "version": 2,
  "builds": [
    { "src": "public/***", "use": "@vercel/static" },
    { "src": "api/**/*.js", "use": "@vercel/node" }
  ],
  "rewrites": [
    {
      "source": "/",
      "has": [
        { "type": "host", "value": "admin.kalixcasino.online" }
      ],
      "destination": "/admin"
    }
  ],
  "routes": [
    { "src": "^/$", "dest": "/public/puente.html" },
    { "src": "^/puente$", "dest": "/public/puente.html" },
    { "src": "^/admin$", "dest": "/public/admin.html" },
    { "src": "^/api/(.*)$", "dest": "/api/$1.js" },
    { "src": "/(.*)$", "dest": "/public/$1" }
  ]
}
